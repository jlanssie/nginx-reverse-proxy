server {
	# Ports
	listen 4000 ssl http2;
	listen [::]:4000 ssl http2;
	
	# Server name
	server_name mydomain.com www.mydomain.com;

	# SSL
	ssl_certificate     mypath/fullchain.pem;
	ssl_certificate_key mypath/privkey.pem;  

	# Logs
	access_log mypath/access.log;
	error_log mypath/error.log;

	# Static files
	root /path/to/static/files;

	location / {
		index index.html;
		try_files $uri $uri/ @cms;
	}

	# Generated files
	location @cms {
		proxy_pass https://127.0.0.1:5000;
		proxy_redirect https://127.0.0.1:5000 https://www.mydomain.com;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-NginX-Proxy true;
	}

	# Compression
	gzip on;

}
