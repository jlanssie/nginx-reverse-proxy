server {
        listen 2222 default_server;
        listen [::]:2222 ipv6only=on default_server;

        server_name domain.com www.domain.com;

        root /var/www/html;

        location ^~ /.well-known/acme-challenge/ {
                allow all;
        }

        location / {
                return 301 https://$host$request_uri;
        }
}

server {
        listen 3333 ssl http2;
        listen [::]:3333 ssl http2 ipv6only=on;

        server_name domain.com www.domain.com;

        ssl_certificate     /etc/letsencrypt/live/site/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/site/privkey.pem;

        access_log /var/log/site/access.log;
        error_log  /var/log/site/error.log;

        root /var/www/html;

        location / {
                index index.html;
                try_files $uri $uri/ @nodejs;
        }

        location @nodejs {
                proxy_pass https://127.0.0.1:6022;
                proxy_redirect https://127.0.0.1:6022 https://www.domain.com;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-NginX-Proxy true;
        }

        gzip on;
}
